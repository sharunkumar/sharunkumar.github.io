{
  "name": "minimalist-portfolio-json",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "serve": "rm -rf dist && astro build && serve --listen 4321 dist",
    "serve:cloudflared": "cloudflared tunnel --url http://localhost:4321/",
    "serve:public": "concurrently --prefix-colors=auto bun:serve bun:serve:cloudflared",
    "generate:favicons": "bun src/scripts/generate-favicons.ts",
    "postinstall": "astro telemetry disable"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/react": "^4.4.0",
    "@astrojs/tailwind": "^6.0.2",
    "@octokit/rest": "^22.0.0",
    "astro": "5.14.1",
    "download": "^8.0.0",
    "favicons": "^7.2.0",
    "hotkeypad": "1.0.2",
    "nullthrows": "^1.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-github-calendar": "^4.5.10",
    "react-icons": "^5.5.0",
    "react-snowfall": "^2.3.0",
    "tailwindcss": "^3.4.17",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/download": "^8.0.5",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "serve": "^14.2.5"
  }
}