{
  "name": "minimalist-portfolio-json",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "serve": "rm -rf dist && astro build && serve --listen 4321 dist",
    "serve:cloudflared": "cloudflared tunnel --url http://localhost:4321/",
    "serve:public": "concurrently --prefix-colors=auto bun:serve bun:serve:cloudflared",
    "generate:favicons": "bun src/scripts/generate-favicons.ts",
    "postinstall": "astro telemetry disable"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/react": "^4.1.6",
    "@astrojs/tailwind": "^6.0.0",
    "@octokit/rest": "^21.1.0",
    "astro": "5.6.2",
    "download": "^8.0.0",
    "favicons": "^7.2.0",
    "hotkeypad": "1.0.1",
    "nullthrows": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-github-calendar": "^4.5.4",
    "react-icons": "^5.4.0",
    "react-snowfall": "^2.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/download": "^8.0.5",
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "concurrently": "^9.1.2",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "serve": "^14.2.4"
  }
}